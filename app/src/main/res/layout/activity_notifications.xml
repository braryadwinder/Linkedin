<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yadwindersinghbrar.linkedin.Notifications">


    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="592dp"

        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#098ac3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/pic" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="10dp"
                android:background="#F8FAFA">

            </SearchView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_weight="0.28">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="59dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/mynet9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yadwinder Singh Brar viewed your profile" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.00"
                    android:text="1st. Student at Cegep de la Gaspie et des ilies" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="See all views"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="62dp"
                android:layout_height="49dp"
                app:srcCompat="@drawable/mynet7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="0.99"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yadwinder Singh Brar viewed your profile" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.00"
                    android:text="1st. Student at Cegep de la Gaspie et des ilies" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="See all views"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearLayout"

            android:layout_width="368dp"

            android:layout_height="40dp"

            android:layout_marginBottom="2dp"

            android:layout_marginLeft="8dp"

            android:layout_marginRight="8dp"

            android:background="#ffffff"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView6"

                    android:layout_width="57dp"

                    android:layout_height="40dp"

                    app:srcCompat="@drawable/home"
                    android:onClick="home"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView7"

                    android:layout_width="75dp"

                    android:layout_height="40dp"

                    app:srcCompat="@drawable/network" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical"

                android:textAlignment="center">

                <ImageView

                    android:id="@+id/imageView8"

                    android:layout_width="86dp"

                    android:layout_height="40dp"

                    app:srcCompat="@drawable/endbar3" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView10"

                    android:layout_width="77dp"

                    android:layout_height="40dp"

                    android:textAlignment="center"

                    app:srcCompat="@drawable/notification" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical">

                <ImageView

                    android:id="@+id/imageView11"

                    android:layout_width="81dp"

                    android:layout_height="40dp"

                    android:textAlignment="center"

                    app:srcCompat="@drawable/job"
                    android:onClick="Jobs"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

