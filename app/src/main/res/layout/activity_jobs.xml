<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yadwindersinghbrar.linkedin.Jobs">


    <ScrollView
        android:layout_width="419dp"
        android:layout_height="587dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.43"
                android:background="#34A0D1"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="78dp"
                    android:layout_height="57dp"
                    app:srcCompat="@drawable/mynet9" />

                <SearchView
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_weight="0.81" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="381dp"
                android:layout_height="495dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                android:layout_marginLeft="10dp"
                tools:layout_editor_absoluteY="8dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="370dp"
                    android:layout_height="490dp"
                    app:srcCompat="@drawable/jobfull" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:id="@+id/linearLayout"

        android:layout_width="385dp"

        android:layout_height="40dp"

        android:background="#ffffff"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView06"

                android:layout_width="57dp"

                android:layout_height="40dp"

                app:srcCompat="@drawable/home"
                android:onClick="home"/>


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView07"

                android:layout_width="75dp"

                android:layout_height="40dp"

                app:srcCompat="@drawable/network" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:orientation="vertical"

            android:textAlignment="center">

            <ImageView

                android:id="@+id/imageView8"

                android:layout_width="86dp"

                android:layout_height="40dp"

                app:srcCompat="@drawable/endbar3" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView10"

                android:layout_width="77dp"

                android:layout_height="40dp"

                android:textAlignment="center"

                app:srcCompat="@drawable/notification" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/imageView11"

                android:layout_width="81dp"

                android:layout_height="40dp"

                android:textAlignment="center"

                app:srcCompat="@drawable/job"
                android:onClick="Jobb"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

